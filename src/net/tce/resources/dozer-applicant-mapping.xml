<?xml version="1.0" encoding="UTF-8"?>
<mappings  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://dozer.sourceforge.net'
   xsi:schemaLocation='http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd'>

  <!-- Los mapeos son bidireccionales (a menos que se indique lo contrario).
       Es decir, este mapeo sirve para pasar de un objeto Dto a un POJO,
       y viceversa. 
  -->
  
  <!-- Candidato -->
  <mapping map-null="false">
    <class-a >net.tce.dto.CandidatoDto</class-a>
    <class-b>net.tce.model.Candidato</class-b>
    <field>
      <a>idCandidato</a>
      <b>idCandidato</b>
    </field>
    <field>
      <a>idEstatusCandidato</a>
      <b>estatusCandidato.idEstatusCandidato</b>
    </field>
    <field>
      <a>idEstatusOperativo</a>
      <b>estatusOperativo.idEstatusOperativo</b>
    </field>
    <field>
      <a>idPersona</a>
      <b>persona.idPersona</b>
    </field>
    <field>
      <a>idPosicion</a>
      <b>posicion.idPosicion</b>
    </field>
    <field>
      <a>rangoGeografico</a>
      <b>rangoGeografico</b>
    </field>
    <field>
      <a>distanciaReal</a>
      <b>distanciaReal</b>
    </field>
    <field>
      <a>ipg</a>
      <b>ipgCodigo</b>
    </field>
    <field>
      <a>ias</a>
      <b>iasCodigo</b>
    </field>
    <field>
      <a>fechaCreacion</a>
      <b>fechaCreacion</b>
    </field>
    <field>
      <a>fechaModificacion</a>
      <b>fechaModificacion</b>
    </field>
  </mapping>
  
  <!-- Posicion -->
  <mapping map-null="false">
    <class-a >net.tce.dto.PosicionDto</class-a>
    <class-b>net.tce.model.Posicion</class-b>
    <field>
      <a>idPosicion</a>
      <b>idPosicion</b>
    </field>
    <field>
      <a>maxAdjacency</a>
      <b>ambitoGeografico.idAmbitoGeografico</b>
    </field>
  </mapping>  

  <!-- AreaTexto -->
  <mapping map-null="false">
    <class-a >net.tce.dto.AreaTextoDto</class-a>
    <class-b>net.tce.model.AreaTexto</class-b>
    <field>
      <a>idArea</a>
      <b>area.idArea</b>
    </field>
  </mapping>  

</mappings>